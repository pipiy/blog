<h1>Add a New Post</h1>

<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2>Errors</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul> 
  <% end %>   
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "large input-text" %>
  </p>

  <p>
    <%= f.label :category %><br />
    <%= f.text_field :tag_list, :class => "large input-text" %>
  </p>

  <p>
    <%= f.label :content%><br />
    <%= f.text_area :content, :class => "input-xlarge my-textarea"  %>
  </p>
  <p>
    <%= f.submit "Add a New Post" %>
  </p>
<% end %>